    display: flex;
    background: linear-gradient(180deg, rgba(6, 24, 18, 0.88), rgba(4, 12, 8, 0.55));
    border-radius: 14px;
    overflow: visible;
    box-shadow: 0 30px 100px rgba(0, 0, 0, 0.75),
    inset 0 1px 0 rgba(255, 255, 255, 0.02);
    border: none;
    background: transparent;
    border: 0;
    font-size: 18px;
    cursor: pointer
}
.auth-left {
    flex: 1;
    position: relative;
    display: flex;
    align-items: stretch
}
.auth-image {
    flex: 1;
    background-image: linear-gradient(180deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.03));
    background-position: center
}
.auth-left-content {
    position: absolute;
    left: 32px;
    width: 540px;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 12px 18px;
    font-size: 34px;
    margin: 0 0 10px
}
.auth-left-content p {
    margin: 0 0 18px;
    opacity: 0.95;
    font-size: 13px
}
.auth-left .btn.ghost {
    background: rgba(255, 255, 255, 0.12);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.06);
    padding: 10px 16px;
    border-radius: 8px
}
.auth-right {
    width: 420px;
    background: transparent;
    display: flex;
    align-items: center;
    justify-content: center
}
.auth-forms {
    width: 86%;
    position: relative;
    z-index: 2
}
.auth-form {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 92% flex-direction: column;
    gap: 12px
}
.auth-form h2 {
    margin: 0 0 6px;
    color: #0e0e0e
}
.auth-form input {
    padding: 12px 14px;
    border-radius: 8px;
    border: 1px solid #e6e6e6;
    background: #f5f5f5;
    color: #222
}

