<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Welcome ‚Äî Banyumas</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <!-- Landing screen with circle -->
    <div class="landing" id="landing">
        <button class="logo-circle" id="logoBtn" aria-label="Enter site">
            <span class="inner-circle"></span>
        </button>
    </div>

    <!-- Hero screen (hidden initially) -->
    <main class="hero" id="hero">
        <header class="site-header">
            <div class="header-inner">
                <div class="header-left">
                    <div class="logo">
                        <span class="logo-icon">üèõ</span>
                        <div class="logo-text">
                            <div class="brand-title">Banyumas Heritage</div>
                            <div class="brand-sub">Culture ¬∑ Art ¬∑ Harmony</div>
                        </div>
                    </div>
                </div>

                <div class="header-search">
                    <div class="search-pill">
                        <svg class="search-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M21 21l-4.35-4.35" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
                            <circle cx="11" cy="11" r="6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        <input type="search" placeholder="Cari tempat, budaya, atau kuliner" aria-label="Search" />
                    </div>
                </div>

                <div class="header-nav">
                    <nav class="nav">
                        <a href="#">Tempat Wisata</a>
                        <a href="#">Tarian & Kesenian</a>
                        <a href="#">Kuliner Khas</a>
                    </nav>
                </div>

                <div class="header-right">
                    <button class="btn btn-login">Log In</button>
                    <button class="btn btn-regist">Regist</button>
                </div>
            </div>
        </header>

        <section class="hero-content">
            <h1>Experience the Soul of Banyumas Culture</h1>
            <p class="subtitle">Timeless traditions, local artistry, and vibrant cultural events.</p>
            <p class="description">Explore Banyumas through traditional performances, sacred rituals, creative festivals, village heritage, and authentic local flavors.</p>
            <div class="hero-glow"></div>
            <button class="btn btn-explore">Explore the Culture ‚Üí</button>
        </section>
    </main>

    <!-- Events Page (shown after login) -->
    <section id="eventsPage" class="events" aria-hidden="true">
        <div class="events-inner">


            <!-- Login Modal -->
            <div class="login-modal" id="loginModal" aria-hidden="true">
                <div class="modal-backdrop"></div>
                <div class="modal-content">
                    <button class="modal-close" id="modalClose" aria-label="Close">‚úï</button>
                    <h2>Welcome Back</h2>
                    <p>Log in to your Banyumas Heritage Account</p>

                    <form id="loginForm">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" placeholder="Enter your email" required />
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" placeholder="Enter your password" required />
                        </div>

                        <div class="form-row">
                            <label class="checkbox-label">
                        <input type="checkbox" />
                        <span>Remember Me</span>
                    </label>
                            <a href="#" class="forgot-password">Forgot Password?</a>
                        </div>

                        <button type="submit" class="btn-login-form">Login</button>
                    </form>

                    <div class="divider">Or Continue With</div>

                    <div class="social-buttons">
                        <button class="social-btn" aria-label="Google"><span>G</span></button>
                        <button class="social-btn" aria-label="Facebook"><span>f</span></button>
                        <button class="social-btn" aria-label="Apple"><span>üçé</span></button>
                        <button class="social-btn" aria-label="TikTok"><span>‚ô™</span></button>
                    </div>

                    <p class="signup-link">Don't have an account? <a href="#">Create one here ‚Üí</a></p>
                </div>
            </div>

            <!-- Forgot Password Modal -->
            <div class="forgot-password-modal" id="forgotPasswordModal" aria-hidden="true">
                <div class="modal-backdrop"></div>
                <div class="modal-content">
                    <button class="modal-close" id="forgotPasswordClose" aria-label="Close">‚úï</button>
                    <h2>Reset Password</h2>
                    <p>Enter your email to receive a password reset link</p>

                    <form id="forgotPasswordForm">
                        <div class="form-group">
                            <label for="forgotEmail">Email</label>
                            <input type="email" id="forgotEmail" name="email" placeholder="Enter your email" required />
                        </div>

                        <button type="submit" class="btn-login-form">Send Reset Link</button>
                    </form>

                    <div class="forgot-divider">
                        <a href="#" class="back-to-login">‚Üê Back to Login</a>
                    </div>
                </div>
            </div>

            <!-- Register Modal -->
            <div class="register-modal" id="registerModal" aria-hidden="true">
                <div class="modal-backdrop"></div>
                <div class="modal-content">
                    <button class="modal-close" id="registerClose" aria-label="Close">‚úï</button>
                    <h2>Create Account</h2>
                    <p>Step Into the Heart of Banyumas Culture</p>

                    <form id="registerForm">
                        <div class="form-group">
                            <label for="regName">Name</label>
                            <input type="text" id="regName" name="name" placeholder="Enter your name" required />
                        </div>

                        <div class="form-group">
                            <label for="regEmail">Email</label>
                            <input type="email" id="regEmail" name="email" placeholder="Enter your email" required />
                        </div>

                        <div class="form-group">
                            <label for="regPassword">Password</label>
                            <input type="password" id="regPassword" name="password" placeholder="Choose a password" required />
                        </div>

                        <div class="form-row">
                            <label class="checkbox-label">
                        <input type="checkbox" required />
                        <span>By creating an account, you agree to our Terms & Conditions and Privacy Policy</span>
                    </label>
                        </div>

                        <button type="submit" class="btn-login-form">Register</button>
                    </form>

                    <div class="divider">Or Continue With</div>

                    <div class="social-buttons">
                        <button class="social-btn" aria-label="Google"><span>G</span></button>
                        <button class="social-btn" aria-label="Facebook"><span>f</span></button>
                        <button class="social-btn" aria-label="Apple"><span>üçé</span></button>
                        <button class="social-btn" aria-label="TikTok"><span>‚ô™</span></button>
                    </div>

                    <p class="signup-link">Already have an account? <a href="#" class="login-from-register">Log in here ‚Üí</a></p>
                </div>
            </div>

            <script src="script.js"></script>
</body>

</html>